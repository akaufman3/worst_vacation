<section class="listing"> 
 
<div class="row medium-8 large-7 columns">
    <div class="blog-post">
        <h3><%= @listing.location %> <small><%= @listing.price %></small> </h3>
        <div class="image-container">
            <img class="thumbnail" src="/listing_images/<%= @listing.id %>.original.jpg">
        </div>
        <div class="blog-post">  
            <div class="medium-6 large-5 columns">
            <label>Guests
                <select>
                    <% 
                    i = 1
                    begin %>
                    <option value="<%= i %>"><%= i %></option>
                    <% i = i + 1 %>
                    <% end while i < @listing.accommodates_num %>
                </select>
            </label>
            <div class="row">
               <table class="table">
                    <thead>
                        <tr>
                            <th>Check in:
                                <input type="text" class="span2" value id="dpd1">
                            </th>
                            <th>Check out:
                                <input type="text" class="span2" value id="dpd2">
                            </th>
                        </tr>
                    </thead>
               </table>
            </div>
            <a href="#" class="button large expanded">Buy Now</a>
        </div>
        <p><%= @listing.description %></p>
        <div class="callout">
            <ul class="menu simple">
                <li><a href="#">Author: Mike Mikers</a></li>
                <li><a href="#">Comments: 3</a></li>
            </ul>
    </div>
</div>

